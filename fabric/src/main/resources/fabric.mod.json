{
  "schemaVersion": 1,
  "id": "discord_auth_for_mc",
  "version": "${version}",
  "name": "Discord Auth for MC",
  "description": "A Minecraft mod that allows players to use their Discord accounts for authentication on multiplayer servers instead of official Minecraft accounts",
  "authors": [
    "Me!"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/butterflysky/discord-auth-for-mc-fabric",
    "issues": "https://github.com/butterflysky/discord-auth-for-mc-fabric/issues"
  },
  "license": "Apache-2.0",
  "icon": "assets/discord_auth_for_mc/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "dev.butterflysky.fabric.DiscordAuthForMCFabric"
    ],
    "client": [
      "dev.butterflysky.fabric.client.DiscordAuthForMCFabricClient"
    ]
  },
  "mixins": [
    "discord_auth_for_mc.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.16.9",
    "minecraft": "~1.21.1",
    "java": ">=21",
    "architectury": ">=13.0.8",
    "fabric-api": "*"
  },
  "suggests": {
    "another-mod": "*"
  }
}
